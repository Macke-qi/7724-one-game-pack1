<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/register"
    android:layout_width="@dimen/user_width"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_margin="10dip"
    android:background="@drawable/sdk_bg"
    android:orientation="vertical"
    android:visibility="gone" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_marginTop="5dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/rg_back"
            android:layout_width="50dip"
            android:layout_height="match_parent"
            android:gravity="center" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sdk_login_back_selector" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/pp_register_account"
            android:textColor="@color/text_title"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:orientation="vertical"
        android:paddingLeft="18dip"
        android:paddingRight="18dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sdk_input_bg"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dip" >

                <ImageView
                    android:id="@+id/rg_username_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:src="@drawable/sdk_login_icon_yonghu" />

                <EditText
                    android:id="@+id/rg_username_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/rg_username_iv"
                    android:background="@null"
                    android:hint="@string/pp_register_input_name_hint"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/text_input"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dip" >

                <ImageView
                    android:id="@+id/rg_password_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:src="@drawable/sdk_login_icon_mima" />

                <EditText
                    android:id="@+id/rg_password_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/rg_password_iv"
                    android:background="@null"
                    android:hint="@string/pp_register_input_password_hint"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/text_input"
                    android:textSize="16sp" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dip" >

            <ImageView
                android:id="@+id/rg_agree_terms_iv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/sdk_login_fxk_selector" />

            <TextView
                android:id="@+id/rg_agree_terms_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/rg_agree_terms_iv"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/pp_agree_terms"
                android:textColor="@color/text_hint"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/rg_terms_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/rg_agree_terms_tv"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/pp_terms"
                android:textColor="@color/text_red"
                android:textSize="14sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="17dip"
            android:layout_marginTop="10dip"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/rg_quick_register_btn"
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_marginRight="9dip"
                android:layout_weight="1"
                android:background="@drawable/sdk_btn_blue_selector"
                android:text="@string/pp_quick_register"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <Button
                android:id="@+id/rg_register_btn"
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_marginLeft="9dip"
                android:layout_weight="1"
                android:background="@drawable/sdk_btn_red_selector"
                android:text="@string/pp_register"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>