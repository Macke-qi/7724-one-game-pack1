<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/floating_dock_left"
        android:layout_width="@dimen/floating_image_width"
        android:layout_height="@dimen/floating_width"
        android:visibility="gone" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/sdk_icon_dock_left" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/floating_dock_right"
        android:layout_width="@dimen/floating_image_width"
        android:layout_height="@dimen/floating_width"
        android:visibility="gone" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/sdk_icon_dock_right" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/floating_icon"
        android:layout_width="@dimen/floating_width"
        android:layout_height="@dimen/floating_width"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sdk_icon_floating" />
    </LinearLayout>

</RelativeLayout>